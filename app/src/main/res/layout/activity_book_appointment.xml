<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".BookAppointmentActivity">

    <TextView
        android:id="@+id/titlefind_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="TULIP SELFCARE"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/titlefind_doctorTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="Book Appointment"
        android:textColor="#fff777"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_AppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_background"
        android:drawableLeft="@drawable/ic_action_person"
        android:hint="Full Name"
        android:padding="20dp" />

    <EditText
        android:id="@+id/et_AppAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_background"
        android:drawableLeft="@drawable/ic_action_password"
        android:hint="Address"
        android:padding="20dp" />

    <EditText
        android:id="@+id/et_AppContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_background"
        android:drawableLeft="@drawable/ic_action_email"
        android:ems="10"
        android:hint="Contact info"
        android:padding="20dp" />

    <EditText
        android:id="@+id/et_AppFee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_background"
        android:drawableLeft="@drawable/ic_action_person"
        android:hint="Consultant Fee"
        android:padding="20dp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_AppBookAppointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_background"
        android:padding="20dp"
        android:text="BOOK APPOINTMENT" />

    <Button
        android:id="@+id/btn_AppBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_background"
        android:padding="20dp"
        android:text="BACK" />


</LinearLayout>